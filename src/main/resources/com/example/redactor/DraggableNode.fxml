<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<fx:root fx:id="mainLayout" type="AnchorPane" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <BorderPane>
            <left>
                <VBox fx:id="inputVBox" alignment="CENTER" fillWidth="false" spacing="10.0" BorderPane.alignment="CENTER" />
            </left>
            <center>
                <VBox fx:id="nodeContentVBox" spacing="10.0" style="-fx-background-color: white; -fx-border-width: 5; -fx-border-color: pink;" BorderPane.alignment="BOTTOM_CENTER">
                    <children>
                  <BorderPane>
                     <right>
                        <Button fx:id="deleteNode" alignment="BASELINE_RIGHT" mnemonicParsing="false" BorderPane.alignment="CENTER" />
                     </right>
                     <center>
                              <Label fx:id="nodeName" alignment="TOP_CENTER" contentDisplay="CENTER" maxWidth="1.7976931348623157E308" minWidth="-Infinity" mouseTransparent="true" text="Name of Node" textAlignment="CENTER" textOverrun="CENTER_WORD_ELLIPSIS" BorderPane.alignment="CENTER">
                                  <font>
                                      <Font name="Lucida Sans Demibold Italic" size="14.0" />
                                  </font>
                              </Label>
                     </center>
                  </BorderPane>
                        <ImageView fx:id="outputImageView" disable="true" fitHeight="100.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                            <VBox.margin>
                                <Insets />
                            </VBox.margin>
                        </ImageView>
                    </children>
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
               <cursor>
                  <Cursor fx:constant="MOVE" />
               </cursor>
                </VBox>
            </center>
            <right>
                <VBox fx:id="outputVBox" alignment="CENTER_RIGHT" spacing="10.0" BorderPane.alignment="CENTER">
                    <BorderPane.margin>
                        <Insets />
                    </BorderPane.margin>
                    <padding>
                        <Insets bottom="5.0" top="5.0" />
                    </padding>
                </VBox>
            </right>
        </BorderPane>
    </children>
</fx:root>
